#include <stdio.h>
#include <ctype.h>

int isValidString(char str[]) {
    for (int i = 0; str[i] != '\0'; i++) {
        if (!isalpha(str[i])) {  // if not a letter
            return 0;  
        }
    }
    return 1;
}

int main() {
    char str[100];
    printf("Enter a string: ");
    scanf("%s", str);

    if (isValidString(str))
        printf("Valid String (only alphabets)\n");
    else
        printf("Invalid String (contains non-alphabets)\n");

    return 0;
}
